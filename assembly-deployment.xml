<assembly>
    <id>deployment</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
                <include>NOTICE.txt</include>
                <include>log4j2.xml</include>
                <include>default-config.xml</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>${pom.artifactId}/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>machineagent-*.jar</exclude>
                <exclude>junit-*.jar</exclude>
                <exclude>hamcrest-*.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${pom.artifactId}-${pom.version}.jar</source>
            <outputDirectory>${pom.artifactId}</outputDirectory>
            <destName>${pom.artifactId}.jar</destName>
        </file>
    </files>
</assembly>
